# Environment Configuration File
# Copy this file to .env and customize values

# ============================================
# DRIVE/STORAGE CONFIGURATION
# ============================================
# Change output directory to different drive (e.g., D:, E:)
# OUTPUT_DIR=D:/VideoProcessing/outputs
# OUTPUT_DIR=E:/Projects/VEDIO_CAPTION/outputs
# LOG_DIR=D:/VideoProcessing/logs
# TEMP_DIR=D:/VideoProcessing/temp

# ============================================
# TRANSCRIPTION SETTINGS
# ============================================
# Language for transcription (default: en)
TRANSCRIPTION_LANGUAGE=en

# Whisper model size: tiny, base, small, medium, large
# tiny:   Fast, less accurate (~1GB RAM)
# base:   Balanced (default) (~2GB RAM)
# small:  Better accuracy (~5GB RAM)
# medium: High accuracy (~10GB RAM)
# large:  Best accuracy (~10GB RAM, very slow)
WHISPER_MODEL=base

# ============================================
# SCENE DETECTION SETTINGS
# ============================================
# Threshold for scene change detection (0-100, higher = more sensitive)
FRAME_DIFF_THRESHOLD=30.0

# Minimum duration between scene changes (seconds)
SCENE_MIN_DURATION=1.0

# ============================================
# CAPTION SETTINGS
# ============================================
# Font size for burned-in captions
CAPTION_FONT_SIZE=24

# Caption font color
CAPTION_FONT_COLOR=white

# Caption background color with transparency
CAPTION_BG_COLOR=black@0.5

# Maximum characters per caption line
CAPTION_MAX_CHARS=60

# ============================================
# DOWNLOAD SETTINGS
# ============================================
# Timeout for video downloads (seconds)
DOWNLOAD_TIMEOUT=300

# YouTube video quality preference
YOUTUBE_QUALITY=highest

# ============================================
# CREDENTIALS (for private videos)
# ============================================
# WEB_VIDEO_USERNAME=your_username
# WEB_VIDEO_PASSWORD=your_password

# ============================================
# OPENAI API (for AI summarization)
# ============================================
# OPENAI_API_KEY=sk-your-api-key-here

# ============================================
# LOCAL LLM CONFIGURATION (Offline AI Features)
# ============================================
# Enable local LLM for AI summary and Q&A
LLM_ENABLED=true

# Path to local LLM model file (default: models/llama-3.2-3b-instruct.Q4_K_M.gguf)
# Download with: python download_model.py
LLM_MODEL_PATH=models/llama-3.2-3b-instruct.Q4_K_M.gguf

# ============================================
# CLOUD STORAGE CONFIGURATION
# ============================================
# Google Drive OAuth2 credentials file path
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_DRIVE_CREDENTIALS=client_secret_xxxxx.apps.googleusercontent.com.json

# Frontend OAuth Picker Configuration
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_API_KEY=your-google-api-key

# Dropbox Access Token
# Get from: https://www.dropbox.com/developers/apps
DROPBOX_ACCESS_TOKEN=your-dropbox-access-token
DROPBOX_APP_KEY=your-dropbox-app-key

# ============================================
# LOGGING SETTINGS
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
